# DAISY, alias to launch Synopsys Design Vision (GUI) for logic synthesis.
## Author: Vishnu Unnikrishnan (visun26@isy.liu.se)

echo "DAISY:: Launching Synopsys Design Vision"

if ( ! ($?SYNOPSYS) ) then
module load synopsys/2011.09
endif

set setupFile=".synopsys_dc.setup"

cd $USERAREA/syn
mkdir -p Synopsys
cd Synopsys

echo '# Autogenerated file.' > $setupFile
echo set search_path [list "."  "$DAISY_BE_LOGICDIR/libs" "$WORKAREA" "$SYNOPSYS/libraries/syn/" "$SYNOPSYS/mc/lib/dp/dplite/" "$SYNOPSYS/mc/lib/dp/" "$SYNOPSYS/dw/sim_ver/"] >> $setupFile
echo set target_library [list $DAISY_FE_TARGETLIB_DB] >> $setupFile
echo set synthetic_library [list dw_foundation.sldb standard.sldb] >> $setupFile
echo set 'link_library [concat "*" $target_library $synthetic_library]' >> $setupFile
if($?DAISY_FE_SYMBOLLIB) then
  echo set symbol_library [concat $DAISY_FE_SYMBOLLIB] >> $setupFile
endif
echo set sh_command_log_file "./command.log" >> $setupFile
echo define_design_lib WORK -path ./work >> $setupFile

design_vision
